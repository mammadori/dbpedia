<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.dbpedia</groupId>
        <artifactId>extraction</artifactId>
        <version>3.8</version>
    </parent>

    <groupId>org.dbpedia.extraction</groupId>
    <artifactId>scripts</artifactId>
    <name>DBpedia Scripts</name>

    <build>
        <plugins>
            <plugin>

                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>

                <configuration>
                    <!-- TODO configure a launcher for each script -->
                    <launchers>
                        <launcher>
                            <id>ResolveRedirects</id>
                            <mainClass>org.dbpedia.extraction.scripts.ResolveRedirects</mainClass>
                            <jvmArgs>
                                <jvmArg>-Xmx4096m</jvmArg>
                            </jvmArgs>
                            <!-- ../run  ResolveRedirects /data/en/redirects_en.nt /data/en/mappingbased_properties_en.nt /data/en/page_links_en.nt -->
                        </launcher>
                        <launcher>
                            <id>CreateFreebaseLinks</id>
                            <mainClass>org.dbpedia.extraction.scripts.CreateFreebaseLinks</mainClass>
                            <jvmArgs>
                                <jvmArg>-Xms512m</jvmArg>
                                <jvmArg>-Xmx4096m</jvmArg><!-- we load all DBpedia titles, so we need some space. Didn't test how much is actually necessary, 4G is probably too much. -->
                                <jvmArg>-XX:+HeapDumpOnOutOfMemoryError</jvmArg>
                                <jvmArg>-XX:+UseConcMarkSweepGC</jvmArg>
                            </jvmArgs>
                            <!-- ../run CreateFreebaseLinks false false /data/dbpedia .nt.gz freebase-links.nt.bz2 freebase-datadump-quadruples.tsv.bz2 -->
                        </launcher>
                        <launcher>
                            <id>ProcessInterLanguageLinks</id>
                            <mainClass>org.dbpedia.extraction.scripts.ProcessInterLanguageLinks</mainClass>
                            <jvmArgs>
                                <jvmArg>-Xms512m</jvmArg>
                                <jvmArg>-Xmx4096m</jvmArg><!-- we load all interlanguage links for all languages - we need lots of space -->
                                <jvmArg>-XX:+HeapDumpOnOutOfMemoryError</jvmArg>
                                <jvmArg>-XX:+UseConcMarkSweepGC</jvmArg>
                            </jvmArgs>
                            <!-- ../run ProcessInterLanguageLinks /data/dbpedia .ttl.gz en,de --><!-- for specific languages -->
                            <!-- ../run ProcessInterLanguageLinks /data/dbpedia .ttl.gz 10000- --><!-- for languages by article count range -->
                        </launcher>
                    </launchers>
                </configuration>

            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>org.dbpedia.extraction</groupId>
            <artifactId>core</artifactId>
        </dependency>

        <!-- TODO: find a version in a public repo. -->
        <dependency>
            <groupId>org.openrdf</groupId>
            <artifactId>openrdf</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-compress</artifactId>
        </dependency>

    </dependencies>

</project>
